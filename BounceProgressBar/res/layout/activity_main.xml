<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bpb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.roc.bounceprogressbar.MainActivity" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <org.roc.bounceprogressbar.BounceProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            bpb:shape="circle"
            bpb:singleSrcSize="8dp"
            bpb:speed="250"
            bpb:src="#6495ED" />

        <org.roc.bounceprogressbar.BounceProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            bpb:shape="pentagon"
            bpb:singleSrcSize="20dp"
            bpb:speed="250"
            bpb:src="#FFD700" />

        <org.roc.bounceprogressbar.BounceProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            bpb:shape="heart"
            bpb:singleSrcSize="20dp"
            bpb:speed="300"
            bpb:src="#FF0000" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <org.roc.bounceprogressbar.BounceProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            bpb:shape="rhombus"
            bpb:singleSrcSize="20dp"
            bpb:speed="300"
            bpb:src="#66CD00" />

        <org.roc.bounceprogressbar.BounceProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            bpb:shape="original"
            bpb:singleSrcSize="20dp"
            bpb:speed="300"
            bpb:src="@drawable/snowman" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <org.roc.bounceprogressbar.BounceProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            bpb:shape="pentagon"
            bpb:singleSrcSize="25dp"
            bpb:speed="300"
            bpb:src="@drawable/github" />
        
        <org.roc.bounceprogressbar.BounceProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            bpb:shape="heart"
            bpb:singleSrcSize="25dp"
            bpb:speed="300"
            bpb:src="@drawable/github" />
    </TableRow>

</LinearLayout>